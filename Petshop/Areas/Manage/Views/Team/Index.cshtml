@{
    int count = 1;
}
@using Core.Models
@model List<Team>
<div class="container">
    <h1>Teams</h1>
    <a asp-action="Create" class="btn btn-primary">Create</a>
</div>
<div class="container justify-content-center">
    <table class="table" style="width:100%">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Id</th>
                <th scope="col">FullName</th>
                <th scope="col">Designation</th>
                <th scope="col">Image</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <th scope="row">@count</th>
                    <td>@item.Id</td>
                    <td>@item.FullName</td>
                    <td style="width:30%">@item.Designation</td>
                    <td>
                        <img src="~/upload/team/@item.ImgUrl" width="120" heigth="120"  />
                    </td>
                    <td>
                        <a asp-action="Update" asp-controller="Team" class="btn btn-info" asp-route-id="@item.Id">Update</a>
                        <a asp-action="Delete" asp-controller="Team" class="btn btn-danger" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
            
        </tbody>
    </table>
    <div asp-validation-summary=All class="text-danger"></div>
</div>